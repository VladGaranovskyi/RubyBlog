<% if count > page_size %>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="/?page_number=1">First</a></li>

      <% if previous_pages(page_number) > 1 %>
        <li class="page-item">...</li>
      <% end %>

      <% (previous_pages(page_number)..future_pages(page_number, (count / page_size).ceil)).each do |page| %>
        <% if page == page_number %>
          <li class="page-item active"><a class="page-link" href="#"><%= page %></a></li>
        <% else%>
          <li class="page-item"><a class="page-link" <a href="/?page_number=<%= page %>"><%= page %></a></li>
        <% end %>
      <% end %>

      <% if future_pages(page_number, (count / page_size).ceil) < (count / page_size).ceil %>
        <li class="page-item">...</li>
      <% end %>

      <li class="page-item"><a class="page-link" href="/?page_number=<%= (count / page_size).ceil %>">Last</a></li>
    </ul>
  </nav>
<% end %>
