<h2>User list</h2>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Post number</th>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user['name'] %></td>
        <td><%= user_posts[user['name']] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
